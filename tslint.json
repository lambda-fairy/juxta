{
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-implicit-dependencies": [
            true,
            "dev"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ]
    }
}
